{
  "name": "colombian-holidays",
  "version": "0.0.0-development",
  "description": "Colombian holidays",
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .ts --fix",
    "test": "jest --coverage",
    "build:tsc": "tsc -p tsconfig.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build": "npm run build:tsc && npm run build:esm"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MauricioRobayo/colombian-holidays/issues"
  },
  "homepage": "https://github.com/MauricioRobayo/colombian-holidays#readme",
  "author": "Mauricio Robayo <rfmajo@gmail.com> (https://www.mauriciorobayo.com)",
  "keywords": [
    "Colombian holidays",
    "Festivos en Colombia",
    "Colombia",
    "Festivos",
    "Holidays"
  ],
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@types/jest": "^26.0.7",
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "@typescript-eslint/parser": "^3.7.1",
    "eslint": "^7.5.0",
    "eslint-config-airbnb-typescript": "^9.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "husky": "^4.0.2",
    "jest": "^26.1.0",
    "lint-staged": "^10.0.3",
    "prettier": "^2.0.0",
    "semantic-release": "^17.0.7",
    "ts-jest": "^26.1.3",
    "typescript": "^3.9.7"
  },
  "dependencies": {},
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/MauricioRobayo/colombian-holidays.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "jest --bail --findRelatedTests"
    ],
    "**/*.{ts,md}": [
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "prettier": {
    "singleQuote": true
  }
}
