{
  "name": "pascua",
  "version": "0.0.0-development",
  "description": "Calculadora para los festivos en Colombia",
  "main": "dist/index.js",
  "scripts": {
    "format": "prettier --write **/*.{js,ts,css,less,scss,vue,json,gql,md,yml,yaml}",
    "docs:serve": "browser-sync start --server --startPath docs --files docs",
    "test": "jest --coverage",
    "test:watch": "npm test -- --watch",
    "prebuild": "rimraf dist",
    "build": "npm-run-all --parallel build:*",
    "build:main": "babel --copy-files --out-dir dist --ignore __tests__ src",
    "build:umd": "webpack --config webpack.config.umd.js",
    "prepublishOnly": "npm-run-all test build"
  },
  "husky": {
    "hooks": {
      "pre-commit": [
        "lint-staged",
        "npm t"
      ],
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/archemiro/pascua/issues"
  },
  "homepage": "https://github.com/archemiro/pascua#readme",
  "author": "Mauricio Robayo <archemiro@gmail.com> (https://www.archemiro.com)",
  "repository": {
    "type": "git",
    "url": "git@github.com:archemiro/pascua.git"
  },
  "keywords": [
    "Colombia",
    "Festivos",
    "Holidays"
  ],
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "babel-cli": "^6.26.0",
    "babel-loader": "^8.0.4",
    "babel-preset-env": "^1.7.0",
    "browser-sync": "^2.26.3",
    "codecov": "^3.1.0",
    "eslint": "^5.7.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-import": "^2.14.0",
    "husky": "^1.1.2",
    "jest": "^23.6.0",
    "lint-staged": "^8.0.0",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.3",
    "rimraf": "^2.6.2",
    "semantic-release": "^15.9.17",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.2"
  },
  "dependencies": {},
  "files": [
    "dist"
  ]
}
