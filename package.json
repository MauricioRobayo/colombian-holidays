{
  "name": "pascua",
  "version": "0.0.0-development",
  "description": "Colombian holidays",
  "main": "dist/pascua.js",
  "scripts": {
    "lint": "eslint src",
    "test": "jest --coverage",
    "build": "babel src/pascua.js --delete-dir-on-start --out-dir dist"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MauricioRobayo/pascua/issues"
  },
  "homepage": "https://github.com/MauricioRobayo/pascua#readme",
  "author": "Mauricio Robayo <hi@mauriciorobayo.com> (https://www.mauriciorobayo.com)",
  "keywords": [
    "Colombian holidays",
    "Festivos en Colombia",
    "Colombia",
    "Festivos",
    "Holidays"
  ],
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@types/jest": "^26.0.7",
    "eslint": "^6.0.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.18.2",
    "husky": "^4.0.2",
    "jest": "^26.1.0",
    "lint-staged": "^10.0.3",
    "prettier": "^2.0.0",
    "semantic-release": "^17.0.7",
    "ts-jest": "^26.1.3",
    "typescript": "^3.9.7"
  },
  "dependencies": {},
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/MauricioRobayo/pascua.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "jest --bail --findRelatedTests"
    ],
    "**/*.{js,css,json,md}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
